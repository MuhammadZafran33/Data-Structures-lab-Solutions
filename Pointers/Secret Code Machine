#include <iostream>
using namespace std;


int generateCode(int n) {
    if (n == 0)  
        return 1;

    int result = 1;
    for (int i = n; i >= 1; i--) {
        result *= i;
    }
    return result;
}

int main() {

    int (*codePtr)(int);

    
    codePtr = generateCode;

    int number;
    cout << "Enter a number that factorials we finds : ";
    cin >> number;

    int secretNum = codePtr(number);

    cout << "The secret code is " << secretNum << endl;

    return 0;
}
